{
  "extends": "../tsconfig-base",
  "compilerOptions": {
    "composite": true,
    "outDir": "./build",
    "rootDirs": [
      "./src",
      "./__tests__"
    ],
    "noEmit": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitUseStrict": false,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2017",
      "esnext.asynciterable"
    ],
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/api/@types"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}